<?xml version="1.0"?>
<launch>

    <!-- Node Settings -->
    <arg name="path" default="~"/>
    <arg name="dollar" default="$"/>
    <arg name="robot_prefix" default="robot"/>

    <!-- Robot Prefix Parameter Node -->
    <node name="$(anon prefix_param_node)" pkg="robotics_description" type="prefix_param_node" output="screen" > 
        <!-- "robot_prefix" describes the naming of the robot -->
        <param name="robot_prefix" type="str" value="$(arg robot_prefix)"/>
        <rosparam command="load" file="$(arg dollar)$(arg path)/joint_names.yaml"/>
        <rosparam command="load" file="$(arg dollar)$(arg path)/joint_limits.yaml"/>
    </node>

</launch>